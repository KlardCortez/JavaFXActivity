<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #077b8a;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aclcbukidnon.com.javafxactivity.controllers.TrafficLightController">

   <children>
      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <Circle fx:id="btnStop" fill="#575757" radius="80.0" stroke="BLACK" strokeType="INSIDE" />
            <Circle fx:id="btnGo" fill="#575757" radius="80.0" stroke="BLACK" strokeType="INSIDE" />
            <Circle fx:id="btnHold" fill="#575757" radius="80.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
      </HBox>

      <Button onAction="#onStartClick" text="Turn On" textFill="#ffffff"
              style="-fx-background-color: #28a745; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);">
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
      </Button>

      <Button onAction="#onStopClick" text="Turn Off" textFill="#ffffff"
              style="-fx-background-color: #dc3545; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);">
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
      </Button>

   </children>
</VBox>
